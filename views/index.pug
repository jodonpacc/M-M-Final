extends layout.pug

block appContent
        h2#cName(onclick="nameClick()")
        div#nameField
            p
                fieldset
                    legend Character Name
                    input(type='submit',onclick='nameUpdate()')
                    input#nform(type='text',name='nameform',class='search',placeholder='Your Character Name!')
        h3#desc Nobody 
        table
            tr
                td#statButton 
                    //button(onclick='fullroll()') Roll Stats
                    a(onclick='fullroll()') Roll Stats
                th Strength
                th Dexterity 
                th Constitution
                th Intelligence 
                th Wisdom 
                th Charisma
            tr
                th Score
                th#str 0
                th#dex 0
                th#con 0
                th#int 0
                th#wis 0
                th#cha 0
            tr
                th Check Modifier
                th#strm 0
                th#dexm 0
                th#conm 0
                th#intm 0
                th#wism 0
                th#cham 0
            tr
                th Save Bonus
                th#strs 0
                th#dexs 0
                th#cons 0
                th#ints 0
                th#wiss 0
                th#chas 0
        form(id='charForm', action="/saveChar", method="post") 
            p 
                label(for="class") Select A Class
                    select(id="classform" name="classform" form="classform" class="classform")
                        option(value='') Change Class
                        option(value="Mage") Mage 
                        option(value="Warrior") Warrior
                        option(value="Shadow") Shadow 
                        option(value="Priest") Priest
            p
                label(for="race") Select A Race
                    select(id="raceform" name="racelist" form="raceform")
                        option(value='') Change Race
                        option(value="Human") Human 
                        option(value="Dwarf") Dwarf
                        option(value="Elf") Elf 
                        option(value="Orc") Orc
            p 
                label(for="back") Select A Background
                    select(id="backform" name="backlist" form="backform")
                        option(value='') Change Background
                        option(value="Far Traveler") Far Traveler 
                        option(value="Street Urchin") Street Urchin
                        option(value="Veteran") Veteran 
                        option(value="Outlander") Outlander
            input(type="hidden", id='nameInput', name="charName")
            input(type="hidden", id='classInput', name="charClass")
            input(type="hidden", id='raceInput', name="charRace")
            input(type="hidden", id='backInput', name="charBack")
            input(type="hidden", id='picInput', name='portrait')
            input(type="hidden", id='stri', name="str")
            input(type="hidden", id='dexi', name="dex")
            input(type="hidden", id='coni', name="con")
            input(type="hidden", id='inti', name="intel")
            input(type="hidden", id='wisi', name="wis")
            input(type="hidden", id='chai', name="cha")
            button(type='button', onClick="updateSheet()") Update Sheet
            img#charArt(src="./pictures/who.png",height=400,width=400)
            button#artGrab(type='button', onClick="getPic()") Update Art
            button(id='saveBtn', type="button") Save Character

        #log 

                